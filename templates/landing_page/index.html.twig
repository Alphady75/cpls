<!-- Register section -->
<section class="section-pre-lancement shadow-sm bg-white border-bottom section_radius">
   <div class="bg-green section_radius section_register">
      <div class="container">

         <div class="w-90">
            <div class="bg-white radius">
               <p class="text-dark text text-center p-2 bold">Rejoins le lancement de {{ appName }} !</p>
            </div>

            <p class="text-center d-block limite">
               <span class="badge badge-light rounded-pill text-green bold"
                  style="font-size: 18px; height: 35px !important; display: inline-flex; justify-content: center; align-items: center;">
                  {% if cplus.soldOut %}
                  <strike>limité</strike>
                  {% else %}
                  limité
                  {% endif %}
               </span>
               <strong>
                  {% if cplus.soldOut %}
                  <strike>à 50 prestataires</strike>
                  {% else %}
                  à 50 prestataires
                  {% endif %}
               </strong>
            </p>

            {% if cplus.soldOut %}

            <div class="text-center pb-3">
               <strong style="font-size: 24px; position: relative; top: 2px;">Sold</strong> <span
                  class="badge text-rose bg-white radius bold"
                  style="font-size: 19px !important; padding: 0px 12px; height: 30px!important; display: inline-flex; justify-content: center; align-items: center;">out</span>
            </div>

            <div class="join bg-white bg-white border-0 text-center">
               <p class="text-dark p-2 small">Inscris-toi sur la liste d’attente pour être notifié lors de l’ajout de
                  nouvelles places :</p>
            </div>

            {% else %}

            <div class="join bg-white bg-white border-0 text-center">
               <p class="text-dark p-2 small">Rejoins les 50 premiers prestataires de <br> l’appli :</p>
            </div>

            {% endif %}

            {{ form_start(form, {attr: {class: 'join-form m-0 pb-2'}}) }}
            <div class="row">
               <div class="col-6">
                  <div class="">
                     <div class="input-group radius bg-white mb-3">
                        <div class="input-group-prepend">
                           <span class="input-group-text bg-transparent p-0 pl-2 border-0 pr-1"
                              id="basic-addon1">@</span>
                        </div>
                        {{ form_widget(form.instagram) }}
                     </div>
                     {{ form_errors(form.instagram) }}
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col-2 pr-1">
                  <div class="input-group radius bg-white mb-3">
                        <div class="input-group-prepend">
                           <span class="input-group-text bg-transparent p-0 pl-1 border-0 pr-1"
                              id="basic-addon1">+</span>
                        </div>
                        {{ form_widget(form.indicatif) }}
                     </div>
                     {{ form_errors(form.indicatif) }}
               </div>
               <div class="col-5 p-0">
                  <div class="">
                     <div class="">
                        {{ form_widget(form.numero) }}
                        {{ form_errors(form.numero) }}
                     </div>
                  </div>
               </div>
            </div>
            <div class="text-center">
               <button type="submit" class="btn btn-rose w-80 btn-lg">
                  {{ cplus.soldOut ? 'Rejoins la liste d’attente' : 'Rejoins nous !' }}
               </button>
            </div>
            {{ form_end(form) }}
         </div>

      </div>
   </div>

   <!-- Register -->
   <div class="container register pt-2">
      <h3 class="text-left pl-3 bold mb-3" style="font-family: Avenir!important; font-size: 22px!important;">Ils nous
         ont déjà rejoint..</h3>
      {% if convertis|length > 0 %}
      <div class="swiper sample-slider">
         <div class="swiper-wrapper">
            {% for converti in convertis %}
            <div class="swiper-slide user-block">
               {% if converti.avatar|length > 0 %}

               <img class="img-thumbnail rounded-circle"
                  src="{{ vich_uploader_asset(converti, 'imageFile') | imagine_filter('large_avatar') }}" width="80"
                  height="80" style="border: none!important" />

               {% else %}

               <img class="img-thumbnail rounded-circle"
                  src="{{ asset('img/user.jpg') | imagine_filter('large_avatar') }}" width="80" height="80"
                  style="border: none!important" />

               {% endif %}
               <strong class="d-block">@<span class="text-green">{{ converti.instagram|u.truncate(10, '...') }}</span></strong>
            </div>
            {% endfor %}
         </div>
      </div>

      {% else %}
      <p>Aucun inscrit au pré-lancement de {{ appName }}</p>
      {% endif %}
   </div>

</section>

{% endblock %}