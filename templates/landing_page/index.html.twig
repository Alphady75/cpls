                  <a href="#" class="js-modal-btn button">
                     <i class="fa fa-play"></i>
                  </a>
               </div>
            </div>
            <div class="col">
               <div class="service bg-white text-dark text-center">
                  <a href="#" class="js-modal-btn button">
                     <i class="fa fa-play"></i>
                  </a>
               </div>
            </div>
            <div class="col">
               <div class="service bg-white text-dark text-center">
                  <a href="#" class="js-modal-btn button">
                     <i class="fa fa-play"></i>
                  </a>
               </div>
            </div>
            {% elseif videos|length == 2 %}
            <div class="col">
               <div class="service bg-white text-dark text-center">
                  <a href="#" class="js-modal-btn button">
                     <i class="fa fa-play"></i>
                  </a>
               </div>
            </div>
            <div class="col">
               <div class="service bg-white text-dark text-center">
                  <a href="#" class="js-modal-btn button">
