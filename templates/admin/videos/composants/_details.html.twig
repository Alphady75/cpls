<!-- Modal -->
<div class="modal fade" id="modal-{{ video.id }}" tabindex="-1" role="dialog" aria-labelledby="modal-{{ video.id }}Title"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header p-2">
        <h5 class="modal-title" id="exampleModalLongTitle">#{{ video.name }}</h5>
        <button type="button" class="close mr-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
         <h4>{{ video.name }}</h4>

         <iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{ video.url }}" title="{{ video.name }}" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        
      </div> 
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">
          Fermer
        </button>
      </div>
    </div>
  </div>
</div>