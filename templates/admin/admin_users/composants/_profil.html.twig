<!-- Modal -->
<div class="modal fade" id="modal-{{ user.id }}" tabindex="-1" role="dialog" aria-labelledby="modal-{{ user.id }}Title"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header p-2">
        <h5 class="modal-title" id="exampleModalLongTitle">Profil utilisateur {{ user.email }}</h5>
        <button type="button" class="close mr-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-7 mx-auto">

            <div class="text-center py-3">
              <img src="{{ asset('img/user.jpg') | imagine_filter('large_avatar') }}" class="rounded-circle"
                alt="{{ user.email }}">
            </div>

            <table class="table table-borderless text-left">
              <tbody>
                <tr>
                  <td>Nom</td>
                  <th>{{ user.nom }}</th>
                </tr>
                <tr>
                  <td>Prénom</td>
                  <th>{{ user.prenom }}</th>
                </tr>
                <tr>
                  <td>Rôles</td>
                  <th>
                    {% for role in user.roles %}

                      {% if role == 'ROLE_ADMIN' %}
                      <span class="badge text-primary border border-primary rounded-pill">
                        ADMINISTRATEUR
                      </span>
                      {% endif %}
                                            
                    {% endfor %}
                  </th>
                </tr>
                <tr>
                  <td>Email</td>
                  <th>{{ user.email }}</th>
                </tr>
                <tr>
                  <td>Inscrit le</td>
                  <th>{{ user.date ? user.date|date('d/m/Y à H:s:i') : '' }}</th>
                </tr>
                <tr>
                  <td></td>
                  <th>
                    {{ include('admin/admin_users/_delete_form.html.twig') }}
                  </th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">
          Fermer
        </button>
      </div>
    </div>
  </div>
</div>