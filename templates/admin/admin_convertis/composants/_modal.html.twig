<!-- Modal -->
<div class="modal fade" id="modal-{{ converti.id }}" tabindex="-1" role="dialog"
  aria-labelledby="modal-{{ converti.id }}Title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header p-2">
        <h5 class="modal-title" id="exampleModalLongTitle">Détails converti @{{ converti.instagram }}</h5>
        <button type="button" class="close mr-0" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-7 mx-auto">

            <div class="text-center py-3">
              {% if converti.avatar %}

              <img class="img-fluid rounded-circle"
                src="{{ vich_uploader_asset(converti, 'imageFile') | imagine_filter('large_avatar') }}" width="100"
                height="100" />

              {% else %}

              <img class="img-fluid rounded-circle" src="{{ asset('img/user.jpg') | imagine_filter('medium_avatar') }}"
                width="100" height="100" />

              {% endif %}

            </div>

            <table class="table table-borderless text-left">
              <tbody>
                <tr>
                  <td>Instagram</td>
                  <th>@{{ converti.instagram }}</th>
                </tr>
                <tr>
                  <td>Adresse Ip</td>
                  <th>{{ converti.ip }}</th>
                </tr>
                <tr>
                  <td>Numéro</td>
                  <th>{{ converti.numero }}</th>
                </tr>
                <tr>
                  <td>Recurrence</td>
                  <th>
                    <span class="badge badge-primary badge-pill">{{ converti.countRec }}</span>
                  </th>
                </tr>
                <tr>
                  <td>Inscrit le</td>
                  <th>{{ converti.created ? converti.created|date('d/m/Y à H:s:i') : '' }}</th>
                </tr>
                <tr>
                  <td></td>
                  <th>
                    {{ include('admin/admin_convertis/_delete_form.html.twig') }}
                  </th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">
          Fermer
        </button>
      </div>
    </div>
  </div>
</div>